<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_cardetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.6">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2:00 pm"
                        android:textSize="@dimen/normal_text_size"
                        android:textColor="@color/accent_material_light"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/accent_material_light"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="/seat"
                        android:layout_marginTop="10dp"

                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/accent_material_light"
                        android:layout_marginRight="10dp"
                        />


                </LinearLayout>


            <TextView
                android:id="@+id/tv_from_to"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/arrow"
                android:textColor="@color/accent_material_light"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size_medium"/>

            <TextView
                android:id="@+id/tv_seats_available"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 seats available"
                android:layout_marginLeft="10dp"
                android:textColor="@color/accent_material_light"
                android:textSize="@dimen/text_size_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.facebook.login.widget.ProfilePictureView
                    android:id="@+id/profile_pic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Raghav"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/accent_material_light"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_make_n_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/accent_material_light"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Audi Q7"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_medium"/>

                    <TextView
                        android:id="@+id/tv_type_n_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/accent_material_light"
                        android:paddingRight="10dp"
                        android:text="Sedan White"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_medium"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>